<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/medium_margin">

        <TextView
            android:id="@+id/bucket_list_bucket_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/large_text_size"
            tools:text="bucket" />

        <TextView
            android:id="@+id/bucket_list_shot_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bucket_list_bucket_name"
            android:layout_marginRight="@dimen/small_margin"
            android:textSize="@dimen/medium_text_size"
            tools:text="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bucket_list_bucket_name"
            android:layout_toRightOf="@id/bucket_list_shot_count"
            android:text="@string/shots"
            android:textSize="@dimen/medium_text_size" />

        <CheckBox
            android:id="@+id/bucket_list_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical" />
    </RelativeLayout>

    <View
        android:id="@+id/bucket_list_cover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></View>
</android.support.v7.widget.CardView>
